<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        style="@style/BackgroundLayout"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="70"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leed Id:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtcname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C Name:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtbank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_loan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan Type:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_ammount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applied:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent Id:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    style="@style/FormTitle"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    style="@style/FormTitle"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_id_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id:"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtcnamevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C Name:"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_bank_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank:"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_loan_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAP"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000000"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_agent_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AJ2211"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/08/2018"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sent"
                    style="@style/FormLabel"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>