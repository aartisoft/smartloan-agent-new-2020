<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/layouttop"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@color/hederbackground"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/text_lead_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5sp"
                        android:gravity="center_horizontal"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="@string/na"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layouttop"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:weightSum="100">


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/TableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        android:id="@+id/txt_client_name"
                                        style="@style/CellTextLabel"
                                        android:text="Client Name : " />

                                    <TextView
                                        android:id="@+id/txt_client_name_value"
                                        style="@style/CellTextValue"
                                        android:maxLines="2"
                                        android:text="@string/na" />
                                </LinearLayout>

                                <LinearLayout
                                    style="@style/TableCellLinearLayout"
                                    android:layout_weight="0.7"
                                    android:gravity="center">

                                    <TextView
                                        style="@style/CellTextValue"
                                        android:text="Balance Payout" />
                                </LinearLayout>

                            </LinearLayout>


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/HorizontalLinearLayout"
                                    android:layout_weight="0.4">

                                    <LinearLayout
                                        style="@style/TableCellLinearLayout"
                                        android:layout_weight="1">

                                        <TextView
                                            style="@style/CellTextLabel"
                                            android:text="Invoice No. : " />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/TableCellLinearLayout"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/txt_invoice_no"
                                            style="@style/CellTextValue"
                                            android:maxLines="1"
                                            android:text="@string/na" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/TableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellRedTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_balance_payout"
                                            style="@style/CellRedTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>

                            </LinearLayout>


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/HorizontalLinearLayout"
                                    android:layout_weight="0.4">

                                    <LinearLayout
                                        style="@style/TableCellLinearLayout"
                                        android:layout_weight="1">

                                        <TextView
                                            style="@style/CellTextLabel"
                                            android:text="Disbursement Date : " />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/TableCellLinearLayout"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/txt_disbursement_date"
                                            style="@style/CellTextValue"
                                            android:maxLines="1"
                                            android:text="@string/na" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/TableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <LinearLayout
                                        style="@style/TableCellLinearLayout"
                                        android:layout_weight="1">

                                        <TextView
                                            style="@style/CellTextLabel"
                                            android:text="Loan Type" />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/TableCellLinearLayout"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/txt_loan_type"
                                            style="@style/CellTextValue"
                                            android:maxLines="1"
                                            android:text="@string/na" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="Loan Approved" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_loan_approved"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="Total Payout Amount 0.30%" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_total_payout_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="Disbursement Amount" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_disbursement_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="Balance Disbursement Amount" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_balance_disbursement_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="Pay out on Disbursement Amt" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_payout_on_disbursement_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="TDS 10% on Payout Amt" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs" />

                                        <TextView
                                            android:id="@+id/txt_tds_on_payout_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <LinearLayout
                                        style="@style/HorizontalLinearLayout"
                                        android:layout_weight="0.5">

                                        <TextView
                                            style="@style/CellTextLabel"
                                            android:text="@string/last_payout_paid_amt" />


                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/HorizontalLinearLayout"
                                        android:layout_weight="0.5">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="Date "
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/txt_last_payout_date"
                                            style="@style/CellTextValue"
                                            android:text="@string/na"
                                            android:textSize="16sp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/txt_last_payout_paid_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na"
                                            android:textSize="16sp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout style="@style/HorizontalLinearLayout">

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.4">

                                    <TextView
                                        style="@style/CellTextLabel"
                                        android:text="Balance Payout including TDS Amount" />

                                </LinearLayout>

                                <LinearLayout
                                    style="@style/DarkBorderTableCellLinearLayout"
                                    android:layout_weight="0.7">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            style="@style/CellTextValue"
                                            android:text="@string/rs"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/txt_balance_payout_including_tds_amount"
                                            style="@style/CellTextValue"
                                            android:layout_alignParentEnd="true"
                                            android:text="@string/na"
                                            android:textSize="16sp" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout style="@style/HorizontalLinearLayout">

                            <LinearLayout style="@style/DarkBorderTableCellLinearLayout">

                                <TextView
                                    style="@style/CellTextLabel"
                                    android:text="Approved it by Yes so invoice should be created by digital sign" />

                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout style="@style/DarkBorderTableCellLinearLayout">

                            <LinearLayout
                                style="@style/DarkBorderTableCellLinearLayout"
                                android:background="@null">

                                <TextView
                                    style="@style/CellTextLabel"
                                    android:text="Payout Payable After (-) TDS Amount in round UP" />

                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>

                    <EditText
                        android:id="@+id/et_reject_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="100dp"
                        android:layout_marginTop="0sp"
                        android:background="@drawable/edittext_bprder"
                        android:gravity="start"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:inputType="textMultiLine"
                        android:hint="No then Enter Reason"
                        android:padding="10sp"
                        android:paddingLeft="4dp"
                        android:textColor="@color/whitetextcolor"
                        android:textColorHint="@color/hinttextcolor"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/black_color" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout style="@style/HorizontalLinearLayout">

                            <LinearLayout
                                style="@style/DarkBorderTableCellLinearLayout"
                                android:layout_weight="0.4">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        style="@style/CellTextValue"
                                        android:text="@string/rs"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/txt_payout_payable_after_tds_amount"
                                        style="@style/CellTextValue"
                                        android:layout_alignParentEnd="true"
                                        android:text="@string/na"
                                        android:textSize="20sp" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/DarkBorderTableCellLinearLayout"
                                android:layout_weight="0.7"
                                android:background="@color/black_color">


                                <TextView
                                    android:id="@+id/txt_yes_button"
                                    style="@style/CellTextValue"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Yes"
                                    android:textColor="@color/blue"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/txt_no_button"
                                    style="@style/CellTextValue"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="No"
                                    android:textColor="@color/red"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>