<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_mainCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_row_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:id="@+id/layout_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/transparent_color"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="whatsup"
                            android:src="@drawable/chat_outline" />

                        <TextView
                            android:id="@+id/textview_call"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:paddingTop="10dp"
                            android:text="WhatsApp"
                            android:textAlignment="center" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="5dp">
                <LinearLayout
                    android:id="@+id/layout_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/transparent_color"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="SMS"
                        android:src="@drawable/ic_message_processing_grey600_24dp" />

                    <TextView
                        android:id="@+id/textview_whatapp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:text="SMS"
                        android:textAlignment="center" />

                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </android.support.design.widget.CoordinatorLayout>
</layout>

